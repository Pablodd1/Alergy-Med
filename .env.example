# Allergy Scribe Environment Variables
# Copy this file to .env.local and fill in your values

# Required: OpenAI API Key for transcription and extraction
OPENAI_API_KEY=your_openai_api_key_here

# Required: NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_a_random_string
NEXTAUTH_URL=http://localhost:3000

# Authentication Credentials (CHANGE THESE FOR PRODUCTION!)
DEFAULT_USERNAME=allergist
DEFAULT_PASSWORD=allergy123

# Optional: OCR Provider Configuration
# Options: mock, azure, google
OCR_PROVIDER=mock

# If using Azure Form Recognizer (recommended for production)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your_azure_key

# If using Google Document AI
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_LOCATION=us
GOOGLE_DOCUMENT_AI_PROCESSOR_ID=your_processor_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Optional: MongoDB Atlas for persistent storage
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/allergy-scribe

# Optional: Vercel Blob for file storage
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# Optional: Demo mode (no database writes)
DEMO_MODE=false